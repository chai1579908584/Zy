<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">


    <com.zhouyu.nft.view.LockableViewPager
        android:id="@+id/main_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_50"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="bottom"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_tab_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_main_tab_home"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"
            android:text="首页"
            android:textColor="#8D8D8D"
            android:textSize="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_tab_market"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_main_tab_market"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"
            android:text="集市"
            android:textColor="#8D8D8D"
            android:textSize="@dimen/dp_10" />

            <TextView
                android:id="@+id/tv_tab_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/selector_main_tab_brand"
                android:drawablePadding="@dimen/dp_3"
                android:gravity="center"
                android:text="品牌"
                android:textColor="#8D8D8D"
                android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/tv_tab_dao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_main_tab_dao"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"
            android:text="DAO"
            android:textColor="#8D8D8D"
            android:textSize="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_tab_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_main_tab_me"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"
            android:text="我的"
            android:textColor="#8D8D8D"
            android:textSize="@dimen/dp_10" />

    </LinearLayout>

</FrameLayout>