<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context=".activity.OrderDetailsActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:src="@mipmap/ic_me_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="订单详情"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/order_bg"
        android:layout_below="@+id/title"
        />

    <RelativeLayout
        android:id="@+id/buy_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_corner_fff_9dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/head_image"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/head_image"
            android:text="张大大DD"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/head_image"
            android:drawableRight="@mipmap/copy"
            android:drawablePadding="@dimen/dp_6"
            android:ellipsize="end"
            android:text="07xb00875461Df654gf564648gf54"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="买家"
            android:textColor="#ff3392fb"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/commodity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buy_user"
        android:background="@drawable/shape_corner_fff_9dp"
        android:layout_margin="@dimen/dp_10"
        >

        <ImageView
            android:id="@+id/commodity_image"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/commodity_name"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/commodity_image"
            android:text="钢铁侠1:1全身像"
            android:maxLines="1"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/commodity_size"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commodity_name"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/commodity_image"
            android:text="1100cm*1100cm 红色底纹"
            android:maxLines="1"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥199.00"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_14"
            android:layout_toRightOf="@+id/commodity_image"
            android:layout_below="@+id/commodity_size"
            android:layout_marginTop="@dimen/dp_10"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_below="@+id/commodity_size"
            android:layout_marginTop="@dimen/dp_12"
            />

        <View
            android:id="@+id/xia"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#eee"
            android:layout_below="@+id/commodity_image"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单总价"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_12"
            android:layout_below="@+id/xia"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_17"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥199.00"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_below="@id/xia"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commodity"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_corner_fff_9dp"
        android:paddingLeft="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="订单详情"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号                4238789884512222364"
            android:textColor="#ffababab"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式                零钱支付"
            android:textColor="#ffababab"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_6"
            />
        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建时间                2022-05-26 21:21:21"
            android:textColor="#ffababab"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_6"
            />
        <TextView
            android:id="@+id/pay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款时间                2022-05-26 21:31:21"
            android:textColor="#ffababab"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_6"
            />
        <TextView
            android:id="@+id/make_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成交时间                2022-05-26 21:51:21"
            android:textColor="#ffababab"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_20"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/buyer"
            android:layout_width="@dimen/dp_82"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/relation_buyer"
            android:layout_toLeftOf="@+id/delete"
            />
        <ImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/dp_82"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/delete_record_order"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            />

    </RelativeLayout>
</RelativeLayout>