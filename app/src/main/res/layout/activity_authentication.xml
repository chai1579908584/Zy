<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.AuthenticationActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:src="@mipmap/ic_me_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="实名认证"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_35"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_33"
            />
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:hint="请输入姓名"
            android:textColor="@color/black"
            android:textColorHint="#ffababab"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_15"
            android:maxLines="1"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_10"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="证件号码"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_33"
            />
        <EditText
            android:id="@+id/id_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:hint="请输入身份证号"
            android:textColor="@color/black"
            android:textColorHint="#ffababab"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_26"
            android:maxLength="18"
            android:layout_marginRight="@dimen/dp_15"
            android:maxLines="1"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_10"
        />

</LinearLayout>

    <TextView
        android:id="@+id/next"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:background="@drawable/shape_corner_ff3392fb"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_14"
        android:text="下一步"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_33"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_35"
        android:drawableLeft="@mipmap/plaint"
        android:drawablePadding="@dimen/dp_3"
        android:text="实名认证信息校验通过后不可修改"
        android:textColor="#ffa6a6a6"
        android:textSize="@dimen/sp_11" />
</RelativeLayout>