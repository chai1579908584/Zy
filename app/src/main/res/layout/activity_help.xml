<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.HelpActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:src="@mipmap/ic_me_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="帮助中心"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题类型"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_15"
        android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:text="请选择您的问题"
            android:textColor="#ffababab"
            android:textSize="@dimen/sp_14"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableRight="@mipmap/help_down"
            android:paddingRight="@dimen/dp_15"
            android:background="#f8f8f8"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题内容"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f8f8f8"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@color/tou"
                android:hint="请详细描述您在使用过程中遇到的问题"
                android:textColorHint="#ABABAB"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="top"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ABABAB"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_10"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_15"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:hint="请输入您的手机号或邮箱以便我们及时反馈"
            android:textColor="@color/black"
            android:textColorHint="#ABABAB"
            android:textSize="@dimen/sp_14"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#f8f8f8"
            />
        <TextView
            android:id="@+id/sure"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_corner_ff3392fb"
            android:gravity="center"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:text="提交"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_17"
            android:layout_marginTop="@dimen/dp_30"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题提交后请耐心等待"
            android:textColor="#ffababab"
            android:textSize="@dimen/sp_11"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableLeft="@mipmap/plaint"
            android:drawablePadding="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_30"
            />
    </LinearLayout>
    </ScrollView>

</LinearLayout>