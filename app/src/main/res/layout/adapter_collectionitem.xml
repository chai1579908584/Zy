<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    android:background="@drawable/shape_corner_fff_15dp"
    android:layout_marginTop="@dimen/dp_15"
    >

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:src="@mipmap/tianchong" />

    <TextView
        android:id="@+id/time"
        android:layout_width="@dimen/dp_125"
        android:layout_height="@dimen/dp_23"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@mipmap/presell_time_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_15"
        android:textColor="#1A66E3"
        android:textSize="@dimen/sp_10" />

    <ImageView
        android:id="@+id/hot_sale"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_23"
        android:src="@mipmap/hot_sale"
        android:layout_margin="@dimen/dp_15"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/shouqing"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_23"
        android:src="@mipmap/shouqing"
        android:layout_margin="@dimen/dp_15"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/type_image"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_23"
        android:src="@mipmap/image_right"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp_15"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_bg"
        >

        <ImageView
            android:id="@+id/head_image"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_10" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_toRightOf="@+id/head_image"
            android:textColor="#ff03081a"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/shang_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:maxLength="6"
            android:textColor="#ff03081a"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_num"
            android:layout_width="@dimen/dp_86"
            android:layout_height="@dimen/dp_15"
            android:layout_below="@+id/head_image"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@mipmap/xianliang"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="限量"
                android:textColor="#ff3392fb"
                android:textSize="@dimen/sp_9" />

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_22"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_9" />
        </LinearLayout>
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff1a66e3"
            android:textSize="@dimen/sp_20"
            android:layout_below="@+id/head_image"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />
    </RelativeLayout>
</RelativeLayout>