<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/dp_6"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05月22日"
        android:textColor="#ff03081a"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00"
        android:textColor="#ff03081a"
        android:textSize="@dimen/sp_15"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_67"
        android:background="@drawable/shape_corner_fff_10dp"
        android:layout_marginTop="@dimen/dp_6"
        >
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_67"
            android:src="@mipmap/ic_launcher_round"
            />
        <ImageView
            android:id="@+id/typeImage"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_46"
            android:layout_marginTop="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="漫威宇宙艺术作品"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_15"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@+id/image"
            android:background="@drawable/shape_corner_biankuang_8d"
            android:paddingLeft="@dimen/dp_2"
            android:paddingTop="@dimen/dp_1"
            android:paddingRight="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_1"
            android:text="限量  1000份"
            android:textColor="#ff8d8d8d"
            android:textSize="@dimen/sp_9" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥99.99"
            android:textColor="#ff1a66e3"
            android:textSize="@dimen/sp_20"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_marginRight="@dimen/dp_10"
            />
    </RelativeLayout>

</LinearLayout>