<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15"
    >

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_170"
        android:src="@mipmap/tianchong" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:paddingRight="@dimen/dp_4"
        android:background="@drawable/shape_corner_hei_tou"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/head_image"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_1"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:maxEms="6"
            android:text="千帆竞速潮玩"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <ImageView
        android:id="@+id/type"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:src="@mipmap/image_right" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_130"
        android:background="@drawable/shape_corner_fff_touming">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:maxLength="7"
            android:text="暗夜幽灵制作组"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="#2000"
            android:textColor="#ff0077ee"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="¥99.99"
            android:textColor="#ff0048bf"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>


</RelativeLayout>