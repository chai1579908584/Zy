<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.PwdActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:src="@mipmap/ic_me_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="更改密码"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/title"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_35"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册手机号"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13712345678"
            android:textColor="#ff3392fb"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_25"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eee"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_26"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_15"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短信验证码"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            />
       <EditText
           android:layout_width="@dimen/dp_120"
           android:layout_height="wrap_content"
           android:background="@color/white"
           android:layout_marginLeft="@dimen/dp_25"
           android:textColorHint="#6B6B6B"
           android:textColor="@color/black"
           android:textSize="@dimen/sp_13"
           android:hint="请输入验证码"
           android:inputType="number"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="#ff3392fb"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_18"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eee"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_26"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_15"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置新密码"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_25"
            android:textColorHint="#6B6B6B"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            android:hint="请输入新密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eee"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_26"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_15"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认新密码"
            android:textColor="#ff222629"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_25"
            android:textColorHint="#6B6B6B"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            android:hint="再次输入新密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eee"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginRight="@dimen/dp_26"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="支付密码为6位纯数字"
        android:textColor="#ffababab"
        android:textSize="@dimen/sp_11"
        android:gravity="end"
        android:layout_marginRight="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_10"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/sure"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/shape_corner_ff3392fb"
        android:gravity="center"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_14"
        android:text="确定"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_17" />
</RelativeLayout>